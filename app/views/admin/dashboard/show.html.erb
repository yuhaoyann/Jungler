<section class="admin-dashboard-show">

  <header class="page-header">
    <h1>Admin &raquo; Dashboard</h1>
  </header>

  <div class="panel panel-default items">

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Item</th>
        <th>Current Quantity</th>
        <th>Manage</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>Products</td>
        <td><%= @product_count %></td>
        <td><%= link_to 'Edit', [:admin, :products], class: 'btn btn-info' %></td>
      </tr>
      <tr>
        <td>Categories</td>
        <td><%= @category_count %></td>
        <td class="align right"><%= link_to 'Edit', [:admin, :categories], class: 'btn btn-info' %></td>
      </tr>
      <tr>
        <td>Sales</td>
        <td><%= @sales_count %></td>
        <td class="align right"><%= link_to 'Edit', [:admin, :sales], class: 'btn btn-info' %></td>
      </tr>
    </tbody>
  </table>
  
  </div>

</section>
